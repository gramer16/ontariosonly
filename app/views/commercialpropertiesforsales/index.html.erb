  <div class="jumbotron">
  <div class="left">
  <h2>Commercial Property Listing</h2>
 </div>
 </div>
  <div class="left">
<h4><strong>Find a Commercial Listing</strong></h4>
<%= form_tag search_commercialpropertiesforsales_path, method: :get do %>
          <p>
<%= text_field :search, params[:search], placeholder: "Enter a Location (Address, City, Zipcode)",class: "form-control" %><br>
<div class="right">
        <button type ="button" class="btn btn-link" data-toggle="collapse" data-target="#filter">
          ADVANCED SEARCH OPTIONS<br>
        </button>
          <div id="filter" class="collapse in">
            <br>
            <div class="thumbnail">
            <div class= "row">
                <div class= "col-md-4">
                 <div class= "form-group">
                  <%= label_tag :Purchase_or_Lease %>
                  <%= select_tag(:action, options_for_select([["For Sale", "Sale"],["For Rent","Rent"]], params[:action]),{
                    include_blank: false}) %>
                  </div>
                  </div>
                  <div class= "col-md-4">
                  <div class= "form-group">
                <%= label_tag :type_of_Property %>
                 <%= select_tag(:property_type, options_for_select([["Office","Office"],["Industrial","Industrial"],["Retail","Retail"],["Land","Land"],["Multi-Family","Multi Family"], ["Healthcare","Healthcare"], ["Development Opportunity","Development Opportunity"], ["Flex Space","Flex Space"], ["Mixed Use","Mixed Use"], ["Special Purpose","Special Purpose"]], params[:property_type]),{include_blank: false}) %>
               </div>
             </div>
             <div class= "col-md-4">
               <div class= "form-group">
                <%= label_tag :Status %>
                 <%= select_tag(:status, options_for_select([["Active","Active"],["Pending", "Pending"],["Pending Continue to Show", "Pending Continue to Show"],["Sold", "Sold"]],params[:status]),{include_blank: false}) %>
                </div>
              </div>
              <div class= "col-md-4">
                <div class= "form-group">
                <%= label_tag :construction_Type %>
                  <%= select_tag(:construction_type, options_for_select([["New Construction", "New Construction"],["Renovated","Renovated"],["Needs Renovations", "Needs Renovations"]], params[:construction_type]),{include_blank: false}) %>
                  </div>
                </div>
              </div>
          </div>
        </div>
</div>
<%= submit_tag "Search", name: nil ,class: "btn btn-warning" %>
      </p>
</div>
      <% end %>


 <div class="thumbnail">
    <div class="center"> 
    <div class="row">
    <% @commercialpropertiesforsales.each do |commercialpropertiesforsale| %>
    <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to image_tag(commercialpropertiesforsale.image.url), commercialpropertiesforsale %>
    <div class="caption">
      <h3><strong><%= commercialpropertiesforsale.address %></strong></h3>
      <h4><strong><th>Price: </th> <%= number_to_currency(commercialpropertiesforsale.price) %></strong></h4>
      <p>
        <p><%= "Listed by: #{commercialpropertiesforsale.user.name}" %></p>
        <th>Property type: </th> <%= commercialpropertiesforsale.property_type %><br>
        <th>Property for: </th> <%= commercialpropertiesforsale.action %><br>
        <th>City: </th> <%= commercialpropertiesforsale.city %><br>
        <th>Zipcode: </th> <%= commercialpropertiesforsale.zipcode %><br>
        <th>Real Estate Company: </th> <%= commercialpropertiesforsale.realestatecompany %><br>
        <th>Office Phone: </th> <%= commercialpropertiesforsale.officephone %><br>
        <th>Company website: </th> <%= commercialpropertiesforsale.companywebsite %><br>
         <th>Co-Listing Agent: </th> <%= commercialpropertiesforsale.listingagent %><br>
         <th>Co-Listing Agent: </th> <%= commercialpropertiesforsale.emailagent %><br>
         <th>Agent Phone: </th> <%= commercialpropertiesforsale.agentphone %><br>
          <th>Total Building Square Feet: </th> <%= commercialpropertiesforsale.totalbuildingSF %><br>
          <th>Total Units or Suites: </th> <%= commercialpropertiesforsale.totalunits %><br>
          <th>Floor Number: </th> <%= commercialpropertiesforsale.floorsnumber %><br>
          <th>Property Description Details: </th> <%= commercialpropertiesforsale.property_description %><br>
          <th>Type of Construction: </th> <%= commercialpropertiesforsale.construction_type %>
      </p>
        <td><%= link_to 'Show', commercialpropertiesforsale, class: "btn btn-warning" %></td>
        <% if (user_signed_in?) && (current_user == commercialpropertiesforsale.user) %>
        <td><%= link_to 'Edit', edit_commercialpropertiesforsale_path(commercialpropertiesforsale), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', commercialpropertiesforsale, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
         <% end %>
    </div>
  </div>
</div>
    <% end %>
  </div>
</div>
</div>

<br>
<div class="left">
<%= link_to 'Add New Commercial Property', new_commercialpropertiesforsale_path, class: "btn btn-warning" %>
</div>

 <div class="jumbotron">
  <div class="left">
  <h2>Residential Property Listing</h2>
 </div>
 </div>
  <div class="left">
      <h4><strong>Find a Residential Listing</strong></h4>
   <%= form_tag search_residentials_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: "Enter a Location (Address, City, Zipcode)",class: "form-control" %><br>
      <div class="right">
        <button type ="button" class="btn btn-link" data-toggle="collapse" data-target="#filter">
          ADVANCED SEARCH OPTIONS<br>
        </button>
          <div id="filter" class="collapse in">
            <br>
            <div class="thumbnail">
              <div class= "row">
                <div class= "col-md-4">
                 <div class= "form-group">
                  <%= label_tag :Purchase_or_Lease %>
                  <%= select_tag(:action, options_for_select([["For Sale", "Sale"],["For Rent","Rent"]], params[:action]),{
                    include_blank: false}) %>
                  </div>
                  </div>
                  <div class= "col-md-4">
                  <div class= "form-group">
                <%= label_tag :type_of_Property %>
                 <%= select_tag(:property_type, options_for_select([["Single Family","Single Family Home"],["Townhouse/Condo","Townhouse or Condo"],["Mid/Hi Condominium","High Condominium"],["Residential_Lots","Lots"],["Multi-Family Home","Multi Family Home"]], params[:property_type]),{include_blank: false}) %>
               </div>
             </div>
             <div class= "col-md-4">
               <div class= "form-group">
                <%= label_tag :Status %>
                 <%= select_tag(:status, options_for_select([["Active","Active"],["Pending", "Pending"],["Pending Continue to Show", "Pending Continue to Show"],["Sold", "Sold"]],params[:status]),{include_blank: false}) %>
                </div>
              </div>
              <div class= "col-md-4">
                <div class= "form-group">
                <%= label_tag :construction_Type %>
                  <%= select_tag(:construction_type, options_for_select([["New Construction", "New Construction"],["Renovated","Renovated"],["Needs Renovations", "Needs Renovations"]], params[:construction_type]),{include_blank: false}) %>
                  </div>
                </div>
                <div class= "col-md-4">
                  <div class= "form-group">
                <%= label_tag :Florida_area %>
                  <%= select_tag(:florida_mlsarea, options_for_select([["North_Florida", "North_Florida"],["Central_Florida","Central_Florida"],["South_Florida", "South_Florida"]], params[:florida_mlsarea]),{include_blank: false}) %>
                </div>
              </div>
              <div class= "col-md-4">
                <div class= "form-group">
                <%= label_tag :Is_a_Foreclosure? %>
                  <%= select_tag(:foreclosure, options_for_select([["YES","YES"],["NO","NO"]], params[:foreclosure]),{include_blank: false}) %>
                </div>
              </div>
            </div>
              <br>
              <br>
              <br>
              <div class= "row">
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :bedrooms %>
                  <%= text_field_tag :bedrooms, params[:bedrooms], class: "form-control" %>
              </div>
            </div>
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :full_bathrooms %>
                  <%= text_field_tag :full_bathrooms, params[:full_bathrooms], class: "form-control" %>
              </div>
            </div>
              <div class= "col-md-2">
                <div class= "form-group">
                    <%= label_tag :half_bathrooms %>
                    <%= text_field_tag :half_bathrooms, params[:half_bathrooms], class: "form-control" %>
              </div>
            </div>
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :Min_square_feet %>
                  <%= text_field_tag :min_square_feet, params[:min_square_feet], class: "form-control" %>

              </div>
            </div>
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :Max_square_feet %>
                  <%= text_field_tag :max_square_feet, params[:max_square_feet], class: "form-control" %>
              </div>
              </div>
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :Min_price %>
                  <%= text_field_tag :min_price, params[:min_price], class: "form-control" %>
              </div>
            </div>
              <div class= "col-md-2">
                <div class= "form-group">
                  <%= label_tag :Max_price %>
                  <%= text_field_tag :max_price, params[:max_price], class: "form-control" %>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>  
<br>
 <%= submit_tag "Search", name: nil ,class: "btn btn-danger" %>
      </p>
</div>
      <% end %>
      <br>
      <br>
      <p>

               
 
<div class="center"> 
<div class="row">
  <% @residentials.each do |residential| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to image_tag(residential.image.url), residential %>
      <div class="caption">
        <h3><strong><%= residential.address %></strong></h3>
          <h4><strong><th>Price: </th> <%= number_to_currency(residential.price) %></strong></h4>
          <p>
             <p><%= "Listed by: #{residential.user.name}" %></p>
            <%= residential.property_type %><br>
            <th>Bedrooms:  </th>   <%= residential.bedrooms %><br>
            <th>Full Bathrooms: </th>   <%= residential.full_bathrooms %><br>
            <th>Half Bathrooms: </th>   <%= residential.half_bathrooms %><br>
            <th>Square Feet: </th> <%= residential.square_feet %><br>
            <th>Zip Code: </th>    <%= residential.zip_code %><br>
             <th>Construction Type: </th> <%= residential.construction_type %><br>
             <th>City: </th> <%= residential.city %><br>
             <th>Florida MLS Area: </th> <%= residential.florida_mlsarea %><br>
            <th>Private Pool: </th>    <%= residential.private_pool %><br>
            <th>Water View: </th> <%= residential.water_view %><br>
            <th>Golf Course: </th> <%= residential.golf_course %><br>
            <th>Water Front: </th> <%= residential.water_front %><br>
           
            <th>Status: </th> <%= residential.status %><br>

          </p>
          <%= link_to 'Show', residential, class: "btn btn-warning" %>
          <% if (user_signed_in?) && (current_user == residential.user) %>
          <%= link_to 'Edit', edit_residential_path(residential), class: "btn btn-warning" %>
          <%= link_to 'Delete', residential, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
           <% end %>
 </div>
    </div>
  </div>

  <% end %>

</div>
</div>

<br>
<% if user_signed_in? %>
<%= link_to 'Add a new Residential Listing', new_residential_path, class: "btn btn-danger" %>
<% end %>
<br>

